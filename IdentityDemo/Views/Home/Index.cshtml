@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">ASP.NET Core Identity Demo</h1>
    <p>This project demonstrates Identity Framework with claims-based authentication.</p>
    
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">New User?</h5>
                        <p class="card-text">Create an account to explore Identity features.</p>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Existing User?</h5>
                        <p class="card-text">Sign in to access your dashboard.</p>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-success">Login</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <h4>Welcome back, @User.Identity.Name!</h4>
            <p>You are successfully authenticated using ASP.NET Core Identity.</p>
            <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary">View Dashboard</a>
        </div>
    }
</div>
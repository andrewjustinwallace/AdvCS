@model IdentityDemo.Models.UserProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>User Profile</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9">@Model.Id</dd>
                    
                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>
                    
                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>
                    
                    <dt class="col-sm-3">Age:</dt>
                    <dd class="col-sm-9">@(Model.Age?.ToString() ?? "Not specified")</dd>
                </dl>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5>Roles</h5>
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    @foreach (var role in Model.Roles)
                    {
                        <span class="badge bg-primary me-2">@role</span>
                    }
                }
                else
                {
                    <p class="text-muted">No roles assigned</p>
                }
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5>Claims</h5>
            </div>
            <div class="card-body">
                @if (Model.Claims.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var claim in Model.Claims)
                        {
                            <li class="list-group-item">@claim</li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No custom claims</p>
                }
            </div>
        </div>
    </div>
</div>